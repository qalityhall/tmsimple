{
	"openapi": "3.0.0",
	"info": {
		"title": "TMSimple",
		"description": "Simple Test Case Management System",
		"version": "1.0"
	},
	"paths": {
		"/testcase": {
			"post": {
				"summary": "Create a test case.",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/testcase"
							}
						}
					},
					"required": true
				},
				"responses": {
					"200": {
						"description": "OK"
					},
					"400": {
						"description": "Invalid data",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/invalid_data"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"testcase": {
				"required": [
					"description",
					"name",
					"priority",
					"type"
				],
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"type": {
						"type": "string",
						"enum": [
							"Acceptance",
							"Automation",
							"Funtional",
							"Regression",
							"Smoke"
						]
					},
					"priority": {
						"type": "string",
						"enum": [
							"Critical",
							"High",
							"Medium",
							"Low"
						]
					},
					"precondition": {
						"type": "string"
					}
				}
			},
			"invalid_data": {
				"type": "object",
				"properties": {
					"errors": {
						"type": "string"
					}
				}
			}
		}
	}
}